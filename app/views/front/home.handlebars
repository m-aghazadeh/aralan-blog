<!--blog start-->
<section class="section-gap">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-8">
                {{#each posts}}
                    <div class="card border-0 mb-4 box-hover">
                        <div class="card-body row align-items-center">
                            <div class="col-md-4 mb-md-0 mb-3">
                                <a href="/{{this.slug}}">
                                    <img class="card-img" src="/static/assets/img/cards/10a.jpg" alt="">
                                </a>
                            </div>
                            <div class="col-md-8">
                                <!--                                <a href="#" class="font-size-14">تجهیزات جانبی</a>-->
                                <h6 class="my-2">
                                    <a href="{{this.slug}}">{{this.title}}</a>
                                </h6>
                                <i class="fa fa-user"></i>
                                <span class="font-size-14 text-muted">{{this.full_name}}</span>
                                <i class="fa fa-calendar-alt"></i>
                                <span class="font-size-14 text-muted">{{this.jalali_date}}</span>
                                <div class="mt-3">
                                    <p>{{this.excerpt}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
                <!--pagination-->
                <div class="pagination justify-content-center mt-lg-5 mb-4">
                    <a href="/?page={{pagination.prevPage}}" class="btn btn-dark {{#showDiabled pagination.hasPrevPage}}{{/showDiabled}}"><i class="fa fa-angle-left"></i></a>
                    <div class="h6 mt-2 mx-4">
                        {{pagination.page}} از {{pagination.totalPages}}
                    </div>
                    <a href="/?page={{pagination.nextPage}}" class="btn btn-dark {{#showDiabled pagination.hasNextPage}}{{/showDiabled}}"><i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            {{>sidebar}}
        </div>
    </div>
</section>
<!--blog end-->
