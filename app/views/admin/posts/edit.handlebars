<div class="col-12 mb-30">
    <div class="box">
        <div class="box-head">
            <h4 class="title">ویرایش پست</h4>
        </div>
        <div class="box-body">
            <form action="/admin/posts/update/{{post.id}}" method="POST">
                <div class="row mbn-20">
                    <div class="col-6 mb-20">
                        <input type="text" id="postTitle" name="postTitle" class="form-control"
                               value="{{post.title}}"
                               placeholder="عنوان">
                    </div>
                    <div class="col-6 mb-20">
                        <input type="text" id="postSlug" name="postSlug" class="form-control"
                               value="{{post.slug}}"
                               placeholder="لینک">
                    </div>
                    <div class="col-12 mb-20">
                        <textarea type="text" id="postContent" name="postContent"
                                  class="form-control"
                                  placeholder="محتوا">{{post.content}}</textarea>
                    </div>

                    <div class="col-sm-12 mb-20">
                        <h6 class="mb-15">وضعیت مطلب</h6>
                        <div class="adomx-checkbox-radio-group">
                            {{#each postStatuses}}
                                <label class="adomx-radio"><input type="radio" value="{{this}}"
                                      {{#isSelectedStatus this}}checked{{/isSelectedStatus}}
                                      name="postStatus"> <i class="icon"></i>{{postStatusAsText this}}</label>
                            {{/each}}
                        </div>
                    </div>

                    <div class="col-12 mb-15">
                        <h6 class="mb-15">کاربر</h6>
                        <select name="author_id" class="form-control">
                            {{#each users}}
                                <option value="{{this.id}}"{{#isPostAuthor
                                        this.id}}selected{{/isPostAuthor}}>{{this.full_name}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="col-12 mb-20">
                        <input type="submit" class="button button-primary w-100"
                               value="بروزرسانی پست">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Default Form End-->