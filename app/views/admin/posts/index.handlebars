<div class="col-12 mb-30">
    <div class="box">

        <div class="box-body">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>عنوان</th>
                    <th>نویسنده</th>
                    <th>تاریخ ایجاد</th>
                    <th>تعداد بازدید</th>
                    <th>عملیات</th>
                </tr>
                </thead>
                <tbody>
                {{#each posts}}
                    <tr>
                        <th>1</th>
                        <th><a href="{{this.slug}}">{{this.title}}</a></th>
                        <th>{{this.author_id}}</th>
                        <th>{{this.created_at}}</th>
                        <th>{{this.views}}</th>
                        <th>
                            <a href="#"><i class="fa fa-pencil"></i></a>
                            <a href="#"><i class="fa fa-remove"></i></a>
                        </th>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>