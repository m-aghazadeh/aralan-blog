<div class="col-12 mb-30">

    <div class="box">
        <div class="box-head has-operation d-flex">
            <h1 class="title">لیست کاربران</h1>
            <div class="operations mr-auto">
                <a href="/admin/posts/create" class="button button-primary col-12"><span><i
                        class="zmdi zmdi-plus"></i>افزودن پست جدید</span>
                </a>
            </div>
        </div>
        <div class="box-body">
            {{#if success}}
                <div class="alert alert-success" role="alert">
                    <i class="zmdi zmdi-info"></i> {{success}}
                </div>
            {{/if}}
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>عنوان</th>
                    <th>نویسنده</th>
                    <th>تاریخ ایجاد</th>
                    <th>تعداد بازدید</th>
                    <th>عملیات</th>
                </tr>
                </thead>
                <tbody>
                {{#each posts}}
                    <tr>
                        <th>{{this.id}}</th>
                        <th>
                            <a href="{{this.slug}}">{{this.title}}</a>
                        </th>
                        <th>{{this.full_name}}</th>
                        <th>{{this.jalali_date}}</th>
                        <th>{{this.views_fa_num}}</th>
                        <th>
                            <a href="/admin/posts/edit/{{this.id}}"><i class="fa fa-pencil"></i></a>
                            <a href="/admin/posts/delete/{{this.id}}"><i
                                    class="fa fa-remove"></i></a>
                        </th>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>